<Window x:Name="mainWindow"
		x:Class="Pente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pente"
        mc:Ignorable="d"
        Title="Pente" Background="Green" Width="750" Height="500">

	<Window.CommandBindings>
		<!-- The good news is we have access to numerous pre-built command
            objects. Two of these common commands are Close and Save-->

		<!-- At the minimum, your CommandBinding objects should always have
            values for the Command and Executed properties. The Command property
            represents the Command object we'll be using, Executed is the event
            we're handling. -->
		<CommandBinding Command="Close"
                        Executed="Close_Click" />
		<CommandBinding Command="Save"
                        Executed="Save_Click" />
		<CommandBinding Command="SaveAs"
						Executed="SaveAs_Click" />
		<CommandBinding Command="Open"
						Executed="Open_Click" />
	</Window.CommandBindings>
	
	<Window.InputBindings>
		<KeyBinding Key="C"
                    Modifiers="Ctrl"
                    Command="Close" />
	</Window.InputBindings>

	<Grid>


		<Grid	x:Name="StartingMenuGrid"
				Background="DarkCyan"
				Panel.ZIndex="5">
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Label	Content="Enter Names:"
					FontSize="24"
					Width="155"
					Height="50"
					Grid.Column="0"
					Grid.Row="1"
					VerticalAlignment="Top"
					HorizontalAlignment="Center"
					 />
			



			<TextBox
				x:Name="PlayerOneNameBox"
				Height="30"
				Width="145"
				Grid.Row="1"
				Grid.Column="0"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="10"
				Text="Player 1"
				>
			</TextBox>

			<TextBox
				x:Name="PlayerTwoNameBox"
				Height="30"
				Width="145"
				Grid.Row="1"
				Grid.Column="0"
				HorizontalAlignment="Center"
				VerticalAlignment="Bottom"
				Margin="10"
				Text="Player 2"
				>
				
			</TextBox>

			<Label x:Name="WidthValueLabel"
				   Width="50"
				   Height="50"
				   Grid.Row="1"
				   Grid.Column="2"
				   HorizontalAlignment="Left"
				   VerticalContentAlignment="Center"
				   HorizontalContentAlignment="Right"
				   />
			
			<Label x:Name="HeightValueLabel"
				   Width="50"
				   Height="50"
				   Grid.Row="1"
				   Grid.Column="2"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Bottom"
				   VerticalContentAlignment="Bottom"
				   HorizontalContentAlignment="Right"
				   Margin="7"
				   />



			<Label Grid.Column="1"
				   Grid.Row="0"
				   Content="Pente"
				   FontSize="45"
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center">
				
			</Label>
			

			<Label	Content="Board Size"
					FontSize="24"
					Width="125"
					Height="50"
					Grid.Column="2"
					Grid.Row="1"
					VerticalAlignment="Top"
					HorizontalAlignment="Left"
					 />
			
			<Slider
					x:Name="WidthSlider"
					Grid.Row="1"
					Grid.Column="2"
					Width="150"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Margin="10"
					ValueChanged="WidthSlider_ValueChanged"
					Maximum="39"
					Minimum="9"
					TickFrequency="2"
					IsSnapToTickEnabled="True"
					>

			</Slider>

			<Label
					Width="73"
					Height="40"
				   Content="Width:"
				   FontSize="20"
				   Grid.Column="1"
				   Grid.Row= "1"
				   HorizontalAlignment="Right"
				   Margin ="5"
				   >
				
			</Label>
			
			<Label
					Width="73"
					Height="40"
				   Content="Height:"
				   FontSize="20"
				   Grid.Column="1"
				   Grid.Row= "1"
				   HorizontalAlignment="Right"
				   VerticalAlignment="Bottom"
				  
				   >

			</Label>

			<Slider x:Name="HeightSlider"
					Grid.Row="1"
					Grid.Column="2"
					Width="150"
					VerticalAlignment="Bottom"
					HorizontalAlignment="Center"
					Margin="10"
					ValueChanged="HeightSlider_ValueChanged"
					Maximum="39"
					Minimum="9"
					TickFrequency="2"
					IsSnapToTickEnabled="True">
				
			</Slider>

			<Button Background ="LightGray"
					Content="Start Game"
					FontSize="24"
					Height="70"
					Grid.Column="1"
					Grid.Row="2"
					Width="150"
					VerticalAlignment="Bottom"
					Margin="15"
					Click="StartGameButtonClick"/>
			

		</Grid>
		
		<StackPanel
			Orientation="Horizontal">

			<Border
				BorderThickness="1"
				BorderBrush="Black"
				>
				<StackPanel 
					Width="150"
					Background="Gray" Margin="0,1.2,0,-0.4">
					<StackPanel.Resources>
						<Style TargetType="Button" >
							<Setter Property="Width" Value="80"/>
							<Setter Property="Background" Value="White"/>
							<Setter Property="FontSize" Value="18"/>
							<Setter Property="Height" Value="35"/>
							<Setter Property="Margin" Value="10 30 10 0"/>
						</Style>
					</StackPanel.Resources>
					<Menu Background="White"
						  FontSize="14"
						  Height="22"
						  Panel.ZIndex="10">
						<MenuItem Header="_File"
								  Width="50">
							<MenuItem Header="_Open"
								Command="Open" />
							<MenuItem Header="_Save"
								Command="Save" />
							<MenuItem Header="Save _As..."
								Command="SaveAs" />
							<MenuItem Header="_Close"
								Command="Close"
								InputGestureText="Ctrl+C"/>
						</MenuItem>
						<MenuItem Header="_Instructions"
								  Width="100"
								CommandManager.Executed="Instructions_Click"/>
					</Menu>

					<TextBlock Text="Pente"
							   Margin="5"
							   FontSize="30"
							   FontStyle="Oblique"
							   FontWeight="SemiBold"
							   TextAlignment="Center"
							   />
					
					<Label>
						<TextBlock x:Name="lblUpdateUser"
							   Width="140"
							   Height="60"
							   TextAlignment="Center"
							   Text="{Binding Path=playerName}"
							   FontSize="14"
							   FontWeight="Bold"
							   TextWrapping="WrapWithOverflow"
							   />
					</Label>

					<Label Margin="10 40"
						   Padding="0"
						   Width="130"
						   Height = "50">
						<TextBlock x:Name="lblCurrentPlayer"
							   Width="130"
							   Height = "50"
							   TextAlignment="Center"
							   Text="{Binding Path=playerName}"
							   FontSize="14"
							   FontWeight="Bold"
							   TextWrapping="WrapWithOverflow"
							   />
					</Label>

					<Label x:Name="lblCountdown"
							ContentStringFormat="Move Timer: {0}"
							FontWeight="Bold"
							HorizontalContentAlignment="Center"
							FontSize="18"
							Content=""
						   />

					<Button 
						Content="Test1"
					/>

					<Button 
						Content="Test2"
						/>

				</StackPanel>
			</Border>

			<!--<Separator Width="10px"
					   Height="{Binding ElementName=mainWindow, Path=Height }"
					   Background="Black"
					   />-->


			<UniformGrid x:Name="mainGrid"
						 Background="Transparent"					 
						 Panel.ZIndex="2" 
						 HorizontalAlignment="Center"
						 VerticalAlignment="Center"
						 >
			</UniformGrid>

			<Grid x:Name="overlayGrid"
					Panel.ZIndex="1"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
				  >
			</Grid>
		</StackPanel>

	</Grid>


</Window>
